@charset "UTF-8";
/* div{
		border:1px solid;
	}  */
input {
	padding: 0;
	border: 0 none;
	outline: none;
}

.input-text {

	display: inline-block;
}
.input-text input{

	border-bottom: 1px solid #ccc;
}

.tip {
	margin-left: 5px;
	font-size: 14px;
	color: #AAAAAA;
}

.little-container {
	width: 1180px;
	height: 1470px;
	padding: 20px;
	margin: 0 auto;
}

.room-iamge {
	display: inline-block;
	width: 250px;
	height: 160px;
}

#room-info {
	width: 100%;
	padding: 20px;
	margin-bottom: 4px;
	display: inline-block;
}

#room-info .room-name h3 {
	font-weight: 600;
	font-size: 25px;
	padding: 0 0 12px 0;
}

#room-info .room-name ul {
	line-height: 2;
}

#room-info .room-name ul li {
	color: #aaa;
	font-size: 15px;
}

.room-name {
	width: 385px;
	height: 160px;
	float: right;
}

.room-price {
	margin-top: 27px;
	width: 100%;
	height: 50px;
	text-align: right;
	border-bottom: 1px solid #ccc;
}

.room-price span {
    font-size: 20px;
}
.room-price .pay_info{
	font-weight: 600;
	float:left;
}
.mileage-box {
	width: 100%;
	height: 130px;
	padding: 20px;
	margin-bottom: 40px;
}

.user-mileage-box h3 {
	margin-bottom: 25px;
}

.user-mileage-box {
	border-bottom: 1px solid #ccc;
	height: 149px;
}

.form-item {
	margin-top: 20px;
	height: 80px;
}

.form-name {
	display: inline-block;
	font-size: 14px;
	color: #333;
	width: 110px;
}

.form-name label {
	cursor: pointer;
}

.form-body {
	display: inline-block;
	margin-bottom: 30px;
}

.user-info-box {
	width: 100%;
	height: 380px;
	padding: 20px;
	margin-bottom: 15px;
}

.user-info-box .info-title {
	margin-top: -10px;
	margin-bottom: 28px;
}

.user-info-box .pay-way {
	margin-top: 50px;
	margin-bottom: 25px;
}

.info-box {
	height: 165px;
	border-bottom: 1px solid #ccc;
}

.terms-box {
	width: 660px;
	padding: 20px;
	margin-bottom: 15px;
	border-bottom: 1px solid #ccc;
}

.guide-box {
	margin-top: 2px;
	width: 635px;
	height: 400px;
}

.guide-table {
	width: 100%;
	text-align: center;
}

tr, td, th {
	color: #333;
	border: 1px solid #ccc;
	font-size: 15px;
	padding: 9px 5px;
}

thead {
	background: burlywood;
}

#right-sidebar {
	right: 70px;
	position: fixed;
	width: 330px;
	height: 500px;
}

.start {
	height: 40px;
	padding: 0 0 0 10px;
	display: inline-block;
}

.end {
	height: 40px;
	padding: 0 10px 0 0;
	float: right;
	display: inline-block;
}

.start p {
	color: rgba(188, 55, 72, 15);
	font-size: 25px;
}

.end p {
	color: rgba(188, 55, 72, 15);
	font-size: 25px;
}

.check-tab {
	padding: 12px 0 12px 0;
	color: white;
}

.check-in {
	padding: 0 0 0 51px;
}

.check-out {
	padding: 0 41px 0 0;
	float: right;
}

.pay-box {
	height: 165px;
	margin-bottom: 15px;
	border-bottom: 1px solid #ccc;
}

.received-calendar {
	width: 100%;
	height: 95px;
	background: #404040;
}

.unknown {
	height: 234px;
}

.pay-infor {
	width: 100%;
	height: 70%;
	margin-top: 10px;
	background: #404040;
}

.pay-infor ul {
	padding: 0 15px 30px 15px;
}

.pay-infor li {
	color: #ff736e;
	font-weight: 600;
	font-size: 18px;
}

.pay-infor li em {
	float: right;
	font-size: 35px;
	color: #ff736e;
}

.pay-button button {
	bottom: 0;
	cursor: pointer;
	display: block;
	width: 100%;
	height: 68px;
	border: none;
	font-size: 14px;
	color: #fff;
	text-align: center;
	background: -webkit-gradient(linear, left top, right bottom, color-stop(0, #ff5146),
		color-stop(100%, #ff2d7b));
}

#content {
	width: 700px;
	padding: 20px;
	float: left;
}

.room-iamge {
	background-image: url('../images/hotel3.jpg');
	background-size: cover;
}

.user-info-box .info-box input {
	text-align: left;
}

.terms-box .guide-text {
	color: #666666;
	font-size: 14px;
}

.terms-text h3 {
	margin-top: 25px;
	margin-bottom: 10px;
}

.guide-text ul {
	line-height: 1.7;
}

.act {
	border-bottom: 3px solid rgb(242, 17, 76);
	font-weight: bold;
	color: rgb(230, 28, 81);
}
.form-item .form-body .input-text button{
	padding: 3px;
	color: #ff2d60;
	cursor: pointer;
	border: 1px solid #ff2d60;
	background: white;
}
.input-text span{
	
	font-size: 13px;
}
.input-text i{
	color:#666;
	font-size: 13px;
}