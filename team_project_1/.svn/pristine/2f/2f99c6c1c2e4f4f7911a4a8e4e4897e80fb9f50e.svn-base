@charset "UTF-8";

.container {
	width: 100%;
	padding: 0;
	margin: 0;
}

.member_table {
	text-align: justify;
	width: 50%;
	padding: 150px 0;
	margin: 0 auto;
}

h2 {
	text-align: center;
    padding: 30px 0 50px 0;
    font-weight: 600;

}

table {
	margin: 0 auto;
}

table th td {
	display: block;
}
table tr th {
	padding: 5px 5px;
    height: 57px;
    line-height: 1.6em;
    text-align: right;
    font-size: 15px;
    color: #292929;
    font-family: 'Nanum Gothic', sans-serif;
    font-weight: 700;
}
.point {
    color:red;
}

table input {
	margin: 30px auto;
	font-size: 14px;
    width: 300px;
    height: 30px;
    padding: 5px 13px;
    color: #999999;
    border:none;
    border-bottom: 1px solid #d9d9d9;
    background: transparent;
    -moz-border-radius: 2px;
    -webkit-border-radius: 2px;
    border-radius: 2px;
}

.button_area {
    padding-top: 35px;
	text-align: center;
}

button {
	border-radius: 5px;
    width: 150px;
    background-color: #f8585b;
    border: none;
    color: #fff;
    padding: 15px 0;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 15px;
    margin: 10px;
    cursor: pointer;
}
