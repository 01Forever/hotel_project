	#search {
		background: url("../images/header.jpg");
		background-size: contain;
		position: relative;
		padding: 14% 0 6% 0;
		margin: 0 auto;
		max-height: 450px;
	}

	#search_bar {	
		background-color: #fff;
		border: 5px solid #ff5146;
		border-radius: 10px;
		width: 60%;
		height: 145px;
		margin: 0 auto;
		position: relative;
	}
	
	.search_item {
		float: left;
		width: 20%;
		height: 145px;
		text-align: center;
	}
	
	.search_category {
		padding-top: 30px;
	}
	
	#search_button{
		color: white;
		border: none;
		top: 0;
		right: 0;
		width: 230px;
		height: 150px;
		padding: 0;
		margin: 0;
		font-size: 1.5em;
		text-align: center;
	 	text-decoration: none;
	 	float: right;
		cursor: pointer;
		background: #ff5146;
	    background: -webkit-gradient(linear,left top,right bottom,
					color-stop(0,#ff5146),
					color-stop(100%,#ff5146));
	}
	
	.search_input{
		position:relative; 
		width:80%; 
		height:40px;
		margin: 25px auto;
		line-height:40px; 
		border:1px solid #ff5146; 
		border-radius:4px; 
		text-transform:uppercase; 
		background:#fff;
	}
	
	.search_input label{
		position:absolute; 
		width:100%; 
		top:0; 
		left:0; 
	}
	
	.search_input label:after{
		content:'â–¼'; 
		width:40px; 
		height:40px; 
		position:absolute; 
		top:0; 
		right:0; 
		font-size:.76em; 
		color:#fff; 
		text-align:center; 
		background:#ff5146;
	}
	
	.search_input select{
		width:100%; 
		height:40px; 
		opacity:0; 
		filter:alpha(opacity=0); 
		-ms-filter:alpha(opacity=0);
	}
	
	h2 {
		padding: 30px 40px;
	}
	
	input[type = 'text'] {
		text-align: center;
		background: transparent;
		border: none; 
		width: 100px;
	    height: 30px;
	    font-size: 15px;
	    -webkit-appearance: none; 
	    -moz-appearance: none;    
	    appearance: none;
	}
	
	#content {
		position: relative;
		width: 70%;
		margin: 0 auto;
	}
	
	#close {
		padding: 60px 80px;
	}
	
	#sliderBox {
		width: 93%;
		margin: 0 auto;
	}
	
	#closeSlider {
		width: 50%;
	}
	
	#closeSlider > ul li {
		display: inline;
	}
	
	#hotelImg {
		width: 30%;
		padding-left: 60px;
		float: left;
	}
	
	#distance > li {
		padding: 10px 80px 0 0;
		float: right;
	}
	
	#hotelInfo {
		padding-left: 420px;
	}
	
	#hotelInfo > li {
		padding: 15px 0;
	}
	
	#hotelInfo > li img {
		padding-right: 20px;
		float: left;
	}
	
	#position {
		text-align: center;
		position: relative;
		top: -50px;
	}
	
	#location {
		color: #ff5146;
	}
	
	#recommend {
		background-color: #eee;
		height: 390px;
		padding: 60px 80px;
	}

	#recommend div {
		position: relative;
		width: 26%;
		padding: 0 42px; 
		float: left;
	}
	
	#recommend div img {
		width: 100%; 
		-webkit-filter: grayscale(0) blur(0);
		filter: grayscale(0) blur(0);
		-webkit-transition: .3s ease-in-out;
		transition: .3s ease-in-out;
	}
	
	#recommend div:hover img {
		-webkit-filter: grayscale(100%) blur(3px);
		filter: grayscale(100%) blur(3px);
	}
	
	#recommend div span {
		position: absolute;
		top: 40px;
		display: none;
		font-size: 18px;
	}
	
	#recommend div:hover span {
		display: block;
	}
	
	#event {
		height: 300px;
		padding: 60px 80px;
	}