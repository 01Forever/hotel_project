@charset "UTF-8";

	#search {
		background: url("../images/header.jpg");
		background-size: contain;
		position: relative;
		padding: 14% 0 6% 0;
		margin: 0 auto;
		max-height: 450px;
	}

	#search_bar {
		background-color: #fff;
		border: 5px solid #ff5146;
		border-radius: 10px;
		width: 100%;
		height: 145px;
		margin: 0 auto;
		position: relative;
		max-width: 1100px;
	}
	
	.search_item {
		float: left;
		width: 20%;
		height: 145px;
		text-align: center;
	}
	
	.search_category {
		padding-top: 30px;
	}
	
	#search_button{
		color: white;
		border: none;
		top: 0;
		right: 0;
		width: 100%;
		height: 150px;
		padding: 0;
		margin: 0;
		font-size: 1.5em;
		text-align: center;
		text-decoration: none;
		float: right;
		cursor: pointer;
		background: #ff5146;
		background: -webkit-gradient(linear,left top,right bottom,
					color-stop(0,#ff5146),
					color-stop(100%,#ff5146));
	}
	
	.search_input{
		position:relative; 
		width:80%; 
		height:40px;
		margin: 25px auto;
		line-height:40px; 
		border:1px solid #ff5146; 
		border-radius:4px; 
		text-transform:uppercase; 
		background:#fff;
	}
	
	.search_input label{
		position:absolute; 
		width:100%; 
		top:0; 
		left:0; 
	}
	
	.search_input label:after{
		content:'â–¼'; 
		width:40px; 
		height:40px; 
		position:absolute; 
		top:0; 
		right:0; 
		font-size:.76em; 
		color:#fff; 
		text-align:center; 
		background:#ff5146;
	}
	
	.search_input select{
		width:100%; 
		height:40px; 
		opacity:0; 
		filter:alpha(opacity=0); 
		-ms-filter:alpha(opacity=0);
	}
	
	h2.mianTitle {
	font-size: 23px;
	font-weight: 700;
	line-height: 1.6em;
	}
	
	input[type = 'text'] {
		text-align: center;
		background: transparent;
		border: none; 
		width: 100px;
	    height: 30px;
	    font-size: 15px;
	    -webkit-appearance: none; 
	    -moz-appearance: none;    
	    appearance: none;
	}
	
	#content {
		position: relative;
		/* width: 70%; */
		/* margin: 0 auto; */
	}
	
	.image-box{
		background-image:url('../images/hotel3.jpg');
		background-size:contain;
		width: 21%;
		min-height: 150px;
		margin-left: 60px;
		position: relative;
		overflow: hidden;
		float: left;
	}
	
	.info-box {
		width: 60%;
		height: 150px;
		padding-left: 40px;
		float: left;
	}
	
	.hotelIndex {
		display: inline-block;
	}
	
	.hotelIndex a {
		text-decoration: none;
	}
	
	.hotel-title{
		font-size:25px;
		color: black;
		line-height:2;
		display: block;
		position: relative;
	}
	
	.distance {
		float: right;
	}
	
	.star {
		color: #ffde00;
	}
	
	#close {
		/* padding: 60px 80px; */
		margin-top: 60px;
	}
	
	#sliderBox {
		width: 100%;
	}
	
	#closeSlider {
		width: 50%;
	}
	
	#closeSlider > ul li {
		display: inline;
	}
	
	#hotelImg {
		width: 30%;
		padding-left: 60px;
		float: left;
	}
	
	#distance > li {
		padding: 10px 80px 0 0;
		float: right;
	}
	
	#hotelInfo {
		padding-left: 420px;
	}
	
	#hotelInfo > li {
		padding: 15px 0;
	}
	
	#hotelInfo > li img {
		padding-right: 20px;
		float: left;
	}
	
	#position {
		text-align: center;
		position: absolute;
		top: 7px;
		max-width: 1200px;
		width: 100%;
	}
	
	#location {
		color: #ff5146;
		width: 20px;
		height: 20px;
	}
	
	#recommend {
		padding: 50px 0px;
		background-color: #eee;
		/* height: 390px; */
		/* padding: 60px 80px; */
	}

	#recommend div div:last-child {
		padding-right : 0px;
	}

	#recommend .plan {
		position: relative;
		width: calc(33% - 26px);
		float: left;
		padding-right: 40px;
	}
	
	#recommend .plan img {
		width: 100%; 
		-webkit-filter: grayscale(0) blur(0);
		filter: grayscale(0) blur(0);
		-webkit-transition: .3s ease-in-out;
		transition: .3s ease-in-out;
	}
	
	#recommend .plan:hover img {
		-webkit-filter: grayscale(100%) blur(3px);
		filter: grayscale(100%) blur(3px);
	}
	
	#recommend .plan span {
		position: absolute;
		top: 40px;
		display: none;
		font-size: 18px;
	}
	
	#recommend .plan:hover span {
		display: block;
	}
	
	#event {
	}
	
	#content section {margin-top: 60px;}
	#event #sliderBox .bx-wrapper {border : 0px; box-shadow: none; background: none}
	#event #sliderBox .bx-wrapper img {width: 100%;} 
	#event #sliderBox .bx-wrapper .bx-pager {bottom: 10px;}
	/* bx */
	.bx-wrapper {
		/* padding: 45px 20px; */
	}
	.clear-b:after {content: ''; display: block; width: 0px; height: 0px; clear: both;}
	.main-title {margin-bottom: 30px;}
	
	
	
@media screen and (max-width: 1024px) and (min-width: 601px) {
	#search_bar { width: calc(100% - 25px); }
	#search_bar > form > div:last-child {float: right;}
	#position {width: calc(100% - 25px);}
}