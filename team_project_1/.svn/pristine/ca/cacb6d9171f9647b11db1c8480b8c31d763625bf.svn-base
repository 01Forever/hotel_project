@charset "UTF-8";

	#search {
		background: url("../images/header.jpg");
		background-size: contain;
		position: relative;
		padding: 14% 0 6% 0;
		margin: 0 auto;
		max-height: 450px;
		margin-bottom: 25px;
	}
		
	#maintext {
		margin: auto;
		font-size: 40px;
		color: white;
		position: absolute;
	    top:54%;
	    left:50%;
	    transform: translate(-54%, -190%);                                                                   
	    z-index: 2;
	    text-align: center;
	    line-height: 56px;
	}
	#search_bar {
		background-color: #fff;
		border: 5px solid #ff5146;
		border-radius: 10px;
		width: 100%;
		height: 145px;
		margin: 0 auto;
		position: relative;
		max-width: 1100px;
	}
	
	.search_item {
		float: left;
		width: 20%;
		height: 145px;
		text-align: center;
		display: table;
		/* padding-top: 25px; */
	}
	
	.search_itemIn {
		display: table-cell;
		vertical-align: middle;
	}
	
	.search_category a{
		padding-top: 30px;
	}
	
	.box_category {
	   margin-left: 20px;
 	   margin-top: 10px;
 	   font-size: 24px;
	}
			
	#search_button{
		color: white;
		border: none;
		top: 0;
		right: 0;
		width: 100%;
		height: 150px;
		padding: 0;
		margin: 0;
		font-size: 25px;
		text-align: center;
		text-decoration: none;
		float: right;
		cursor: pointer;
		background: #ff5146;
		background: -webkit-gradient(linear,left top,right bottom,
					color-stop(0,#ff5146),
					color-stop(100%,#ff5146));
		cursor: pointer;
	}
	
	#borugh {cursor: pointer;}
	#res_Start{cursor: pointer;}
	#res_End{cursor: pointer;}
	
	
	/* 헤더 카테고리의 마우스 hover 이벤트 */
	#other a:hover {
		color: #01c9ca;  
	}
	#other a:before {
		content: '';
		position: absolute;
		bottom: 0;
		left: 0;
		display: block;
		width: 100%;
		height: 1px;
		background: #000;
		transform: scale(0);
		transition: all 0.2s;
	}
	#other a:hover:before {
		background: #01c9ca;
 		transform: scale(1);
	}
	
	.search_input{
		position:relative; 
		width:80%; 
		height:40px;
		margin: 25px auto;
		line-height:40px; 
		border:1px solid #ff5146; 
		border-radius:4px; 
		text-transform:uppercase; 
		background:#fff;
	}
	
	.search_input label{
		position:absolute; 
		width:100%; 
		top:0; 
		left:0; 
	}
	
	.search_input label:after{
		content:'▼'; 
		width:40px; 
		height:40px; 
		position:absolute; 
		top:0; 
		right:0; 
		font-size:.76em; 
		color:#fff; 
		text-align:center; 
		background:#ff5146;
	}
	
	.search_input select{
		width:100%; 
		height:40px; 
		opacity:0; 
		filter:alpha(opacity=0); 
		-ms-filter:alpha(opacity=0);
	}
	
	h2.mianTitle {
	font-size: 23px;
	font-weight: 700;
	line-height: 1.6em;
	}
	
	input[type = 'text'] {
		text-align: center;
		background: transparent;
		border: none; 
		width: 100px;
	    height: 30px;
	    font-size: 15px;
	    -webkit-appearance: none; 
	    -moz-appearance: none;    
	    appearance: none;
	}
	
	#content {
		position: relative;
		
	}
	
	.image-box{
		background-image:url('../images/hotel3.jpg');
		background-size:cover;
		width: calc(23% - 26px);
		min-width: 260px;
		min-height: 150px;
		margin-left: 55px;
		margin-top: 20px;
		position: relative;
		overflow: hidden;
		float: left;
		border-radius: 15px;
	}
	
	.info-box {
		width: 60%;
		height: 150px;
		padding: 22px;
		float: left;
		line-height: 28px;
	
	}
	
	.hotelIndex {
		display: inline-block;
	}
	
	.hotelIndex a {
		text-decoration: none;
	}
	
	.hotel-title{
		font-size:25px;
		color: black;
		display: block;
		position: relative;
	}
	
	.distance {
		float: right;
		margin-top: -25px;
		display: inline-block;
	    width: 100px;
	    text-align: right;
	    box-shadow: 2px 2px 12px 1px #dad9d9;
	    padding-right: 10px;

	    font-weight: 700;
	    font-size: 21px;
	    line-height: 1.6em;
	}

	#km {
		 font-size: 15px;
   		 padding-left: 5px;
	}
	
	.star {
		color: #ff5146;
		font-size: 20px;
		
	}
	
	#close {
		/* padding: 60px 80px; */
		margin-top: 60px;
	}
	
	#sliderBox {
		width: 100%;
	}
	
	#closeSlider {
		width: 50%;
	}
	
	#closeSlider > ul li {
		display: inline;
	}
	
	#hotelImg {
		width: 30%;
		padding-left: 60px;
		float: left;
	}
	
	#distance > li {
		padding: 10px 80px 0 0;
		float: right;
	}
	
	#hotelInfo {
		padding-left: 420px;
	}
	
	#hotelInfo > li {
		padding: 15px 0;
	}
	
	#hotelInfo > li img {
		padding-right: 20px;
		float: left;
	}
	
	#position {
		text-align: center;
		position: absolute;
		top: 7px;
		max-width: 1200px;
		width: 100%;
	}
	
	#location {
		color: #ff5146;
		width: 20px;
		height: 20px;
	}
	
	#recommend {
		padding: 50px 0px;
		background-color: #eee;
		/* height: 390px; */
		/* padding: 60px 80px; */
	}

	#recommend div div:last-child {
		padding-right : 0px;
	}

	#recommend .plan {
		text-align: center;
		position: relative;
		width: calc(33% - 26px);
		float: left;
		padding-right: 40px;
		cursor: pointer;
	}
	
	#recommend .plan img {
		height: 300px;
  		width: 90%;
		-webkit-filter: grayscale(0) blur(0);
		filter: grayscale(0) blur(0);
		-webkit-transition: .3s ease-in-out;
		transition: .3s ease-in-out;
		margin-left: 20px;
		margin-right: 20px;
   		margin-top: -30px;
   		opacity: 0.8;
	}
	
	
	#recommend .plan:hover img {
		-webkit-filter: grayscale(100%) blur(3px);
		filter: grayscale(100%) blur(3px);
	}
	
	
	#recommend .plan span {
	    color: white;
		position: absolute;
		top: 20px;
		display: none;
		font-size: 18px;
		margin-left: 30px;
	}
	
	#recommend .plan:hover span {
		display: block;
	}
	
	#event {
	}
	
	#content section {width: 63%; margin-top: 60px; margin: 0 auto;}
	#event #sliderBox .bx-wrapper {border : 0px; box-shadow: none; background: none}
	#event #sliderBox .bx-wrapper img {width: 100%;} 
	#event #sliderBox .bx-wrapper .bx-pager {bottom: 10px;}
	
	.bx-wrapper {
		box-shadow: 0 0 3px #292929;
		border-radius: 15px;
	}
	.clear-b:after {content: ''; display: block; width: 0px; height: 0px; clear: both;}
	.main-title {margin-bottom: 30px;}
	
	
	
@media screen and (max-width: 1024px) and (min-width: 601px) {
	#search_bar { width: calc(100% - 25px); }
	#search_bar > form > div:last-child {float: right;}
	#position {width: calc(100% - 25px);}
}