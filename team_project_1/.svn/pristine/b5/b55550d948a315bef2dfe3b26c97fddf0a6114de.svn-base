				int totalCount = mDao.getMemberListCount();
				
				Paging paging = new Paging();
				paging.setRecent(Integer.parseInt(page));
				paging.setPagePerView(30);
				paging.setRecentLastPPV(10);
				paging.setTotalPage(totalCount);
				paging.getPageCount();
				
