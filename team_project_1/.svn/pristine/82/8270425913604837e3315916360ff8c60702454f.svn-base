/* Style the tab */

/* Style the buttons inside the tab */

.tabCategory {
	padding: 10px;
	margin-top: 10px;
	background-color: white;
    border: none;
    border-bottom: 3px solid #ccc;
    outline: none;
    cursor: pointer;
    transition: 0.3s;
    font-size: 17px;
    float: left;
}

.tabitems {
	margin-top: 10px;
	background-color: white;
    border: none;
    border-bottom: 3px solid #ccc;
    outline: none;
    cursor: pointer;
    transition: 0.3s;
    font-size: 17px;
}

#reserve_board {
	float: left;
}

.tab .tabCategory:hover {
	
	border-bottom: 3px solid rgb(242,17,76);
    font-weight: bold;
    color: rgb(230,28,81);
}

/* Change background color of buttons on hover */


/* Create an active/current tablink class */
.tab button.active {
    background-color: #ccc;
}

/* Style the tab content */
.tabcontent {
    display: none;
    padding: 6px 12px;
    /* border: 1px solid #ccc; */
    border-top: none;
}

