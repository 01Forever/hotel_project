@charset "UTF-8";

#content{
	width:58%;
	height:100%;
	display: inline-block;
	float:left;
}

.room{
	width:350px;
	height:220px;
	margin-bottom:50px;
}

.room-main {
	width:100%; 
	height:190px;
	padding: 0 20px 20px;
	display: block; 
	position: relative;
	float:left;
}

.room-main a {
	text-decoration: none;
	color: black;
}

.image-box{
	background-image:url('../images/hotel3.jpg'); 
	background-size:contain;
	width:30%;
	height:190px;
	margin: 0;
	position: relative;
	overflow: hidden;
	float: left;
}

.info-box {
	width: 60%;
	height: 190px;
	padding-left: 20px;
	float: left;
}

.info-box div {
	padding: 5px 0;
}

.text-title{
	transform: translateY(-50%);
	position: relative;
	top: 50%;
	width: 100%;
}

.hotel-title{
	font-size:25px;
	color: black;
	line-height:2;
	display: block;
	position: relative;
}

.distance {
	float: right;
}

.price{
	position: relative;
	bottom: 2px;	
}

.content-pic  .price span:first-child{
	margin-left:0;
}

.content-pic  .price span{
	margin-left:10px;
	color:#333;
}

.content-pic  .price span i{
	font-size: 16px; 
	font-style:normal;
}

.content-pic  .price span em{
	font-size: 21px; 
	margin-left: 10px;
	font-style:normal;
}

#map{
	position:fixed;
	right:0;
	width:40%;
	height:1000px;
	float:right;
}

ul{
	list-style:none;
	padding-left:0px;
}
ul li{
	display:inline-block;
	margin-left:10px;
}